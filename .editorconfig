# top-most EditorConfig file
root = true

# Global settings for all file types
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java-specific formatting
[*.java]
indent_size = 2
max_line_length = 100
insert_final_newline = true

# XML (for Spring configs, pom.xml)
[*.xml]
indent_style = space
indent_size = 2

# JSON/YAML config files
[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Ignore log files and binary
[*.log]
trim_trailing_whitespace = false
insert_final_newline = false
